<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/lineartop"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/custom_background"
        >
        <TextView
            android:id="@+id/playerTvOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="50sp"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relativeBetween"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lineartop"
        android:background="#1F1C2C"
        >
        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button2"
            android:textSize="50sp"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button2"
            android:layout_toRightOf="@id/one"
            android:textSize="50sp"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button2"
            android:layout_toRightOf="@id/two"
            android:textSize="50sp"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button2"
            android:layout_below="@id/one"
            android:textSize="50sp"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button2"
            android:layout_below="@id/one"
            android:layout_toRightOf="@id/four"
            android:textSize="50sp"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button2"
            android:layout_below="@id/one"
            android:layout_toRightOf="@id/five"
            android:textSize="50sp"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button2"
            android:layout_below="@id/four"
            android:textSize="50sp"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button2"
            android:layout_below="@id/four"
            android:layout_toRightOf="@id/seven"
            android:textSize="50sp"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button2"
            android:layout_below="@id/four"
            android:layout_toRightOf="@id/eight"
            android:textSize="50sp"
            android:textColor="#ffffff"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearbelow"
        android:background="@drawable/custom_background"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@id/relativeBetween"
        >
        <TextView
            android:id="@+id/playerTvTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="50sp"
            android:textColor="#ffffff"
            />
    </LinearLayout>

    <Button
        android:id="@+id/exit"
        android:layout_width="201dp"
        android:layout_height="64dp"
        android:layout_below="@id/linearbelow"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="-3dp"
        android:background="@drawable/custom_button"
        android:text="Exit"
        android:textSize="25sp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/linearbelow"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/exit"
        android:background="@drawable/custom_button"
        android:text="Reset"
        android:textSize="25sp" />
</RelativeLayout>
